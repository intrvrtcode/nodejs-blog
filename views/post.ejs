<div>
  <h1 style="text-align: center;">
    <%= data.title !== null ? data.title : '' %>
  </h1>

  <div class="hero-image">
    <% if (data.image) { %>
      <img src="<%= data.image %>" alt="article image"/>
      <% } %>
  </div>

  <p class="post-info">by <%= data.author %> - <%= data.createdAt.toDateString() %></p>

  <article class="article">
    <%= data.body %>
  </article>
</div>